{
  "manifest_version": 2,
  "name": "基于区块链的备案信息公示系统",
  "version": "1.0",
  "description": "基于区块链的备案信息公示系统",
  "icons": {
    "512": "images/512.png"
  },
  "web_accessible_resources": [
    "images/*.png"
  ],
  "browser_action": {
    "default_icon": {
      "128": "images/defalut.png"
    },
    "default_popup": "popup.html",
    // 标题
    "default_title": "基于区块链的备案信息公示系统"
  },
  "background": {
    //    "persistent": false,//不能与webRequest API接口同时存在。
    "scripts": [
      "js/web3.js",
//      "js/ethereumjs-all.js",
      "js/jquery-3.0.0.js",
      "js/back-script.js"
    ]
  },
  "permissions": [
    "tabs",
    "*://*/*",
    "webRequestBlocking",
    "webRequest"
  ],
  "options_page": "option.html"
}

